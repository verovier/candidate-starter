{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"allowJs": true,
		"checkJs": false,
		"strict": true,
		"types": ["svelte"],
		"lib": ["ES2020", "DOM"],
		"skipLibCheck": true
	},
	"include": [
		"src/**/*.d.ts",
		"src/**/*.ts",
		"src/**/*.js",
		"src/**/*.svelte"
	]
}
